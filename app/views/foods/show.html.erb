<%= render "shared/goback" %>

<div class="row food-show">
  <div class="col-md-6">
	<div class="food-picture">
	  <%= image_tag @food.picture.image.url(:large) %>
	</div>
  </div>

  <div class="col-md-3">
    <ul class="food-info">
	  <li class="food-name"><%= @food.name %></li>
	  <li class="food-info-item"><span class="item-name">所属店铺:</span><%= link_to @food.shop.name, shop_path(@food.shop) %></li>
	  <li class="food-info-item"><span class="item-name">地址:</span><%= @food.shop.address.name %></li>
	  <li class="food-info-item"><span class="item-name">联系电话:</span><%= @food.shop.telephone %></li>
	  <li class="food-info-item"><span class="item-name">其他:</span><%= @food.shop.contact %></li>

	  <li class="buttons">
  	    <span class="glyphicon glyphicon-heart" title="喜欢"></span>30
  	    <span class="glyphicon glyphicon-star" title="收藏"></span>20
      </li>

	  <li class="shop-info-item"><span class="item-name description">美食介绍:</span><%= @food.description %></li>
	</ul>
  </div>

  <div class="col-md-3 food-remarks">
	<% if user_signed_in? %>
      <%= render partial: 'remarks/form', locals: {resource: @food} %>
	<% else %>
	  <%= link_to '登录点评店铺', new_user_session_path %>
	<% end %>
    <%= render @food.remarks.order(created_at: :desc).limit(30) %>
  </div>
</div>


