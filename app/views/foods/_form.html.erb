<%= simple_form_for(@food) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :unit %>
    <%= f.input :price %>
    <%= f.input :description %>

	<%= f.simple_fields_for :picture_attributes, @food.picture do |fd| %>
      <%= fd.input :image, as: :file, label: "选择上传图片" %>
	<% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
