<div class="row">
  <div class="shop-detail">
    <div class="col-md-6 picture owl-carousel owl-shop-pic">
	  <% shop.pictures.each do |pic| %>
	    <%= image_tag pic.image.url(:medium) %>
	  <% end %>
	</div>
	<div class="col-md-6">
      <ul class="list-group">
	    <li class="list-group-item"><h4><%= shop.name %></h4></li>
	    <li class="list-group-item">市县: <%= shop.area.name %></li>
	    <li class="list-group-item">店铺类型: <%= shop.category.name %></li>
	    <li class="list-group-item">地址: <%= shop.address.name %></li>
	    <li class="list-group-item">联系电话: <%= shop.telephone %></li>
	    <li class="list-group-item">其他: <%= shop.contact %></li>
	    <li class="list-group-item">本店介绍: <%= shop.description %></li>
	  </ul>
	</div>
  </div>
</div>
