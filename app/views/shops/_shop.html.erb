<div class="col-sm-6 col-md-3">
  <div class="shop">
    <div class="face">
	  <%= link_to shop_path(shop), "data-no-turbolink" => true do %>
	    <div class="cover">
	      <%= shop.name %>
	    </div>
  	    <%= image_tag shop.face.image.url(:small) %>
  	  <% end %>
    </div>
    <div class="info">
      <p class="name"><%= shop.name %></p>
      <p class="address">地址: <%= shop.address.name %></p>
      <p class="description"><%= truncate shop.description, length: 35 %></p>
    </div>
    <div class="foot-info">
  	  <p>
  	  <span class="glyphicon glyphicon-heart"></span>10 喜欢
  	  <span class="glyphicon glyphicon-star"></span>20 收藏
	  <span class="glyphicon glyphicon-comment"></span><%= shop.remarks.count %> 评论
  	  </p>
    </div>
  </div>
</div>
