<div class=" col-md-3 shop">
  <div class="thumbnail">
	<%= link_to shop_path(shop) do %>
	  <%= image_tag shop.face.image.url(:small) %>
	<% end %>
  </div>
  <div class="caption">
  <p>
    <span><%= shop.category.name %></span>
    <span><%= shop.name %></span>
    <span><%= shop.area.name %></span>
  </p>
  <p><%= shop.address.name %></p>
  <p><%= truncate shop.description, length: 30 %></p>
  </div>
</div>
