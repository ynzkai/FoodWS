<p id="notice"><%= notice %></p>

<h1>Owner Shops</h1>


<% @shops.each do |shop| %>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'Show', shop, class: "btn btn-primary btn-sm" %>
      <%= link_to '管理美食', shop_foods_path(shop), class: "btn btn-primary btn-sm" %>
	  <%= link_to '上传图片', uppics_shop_path(shop), class: "btn btn-primary btn-sm", "data-no-turbolink" => true %>
      <%= link_to 'Edit', edit_shop_path(shop), class: "btn btn-primary btn-sm" %>
      <%= link_to 'Destroy', shop, class: "btn btn-primary btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>

  <%= render partial: "shop_detail", locals: {shop: shop} %>
<% end %>
